<!DOCTYPE html>
<html lang="en">
	<head>
		<%- include('partials/head.ejs') %>
		<link rel="stylesheet" href="/css/styleEditCreate.css" />
		<link rel="stylesheet" href="/css/styleHome.css" />
	</head>
	<body class="body-edit">
		<%- include ("partials/Header.ejs") %>
		<main class="main-edit">
			<article class="container-form">
				<form class="product-edit" action="/product/edit/<%= product.id %>?_method=PUT" method="POST" enctype="multipart/form-data">
					<h2 class="titulo-editando">Editar Artículo: <%= product.name %></h2>
					<div class="container-input">
						<label for="image" class="label-form">Imagen</label>
						<input id="image" name="image" type="file" class="form-input-img" value="<%= product.image %>" accept=".jpg, .png, .jpeg" />
					</div>
					<div class="container-input">
						<label for="name" class="label-form">Nombre</label>
						<input id="name" name="name" class="in-nombre" type="text" value="<%= product.name %>" required />
					</div>
					<div class="container-input">
						<label for="brand" class="label-form">Marca</label>
						<select class="select-brand" id="brand" name="brand"  >
							<option value="" disabled>--Elige--</option>
							<option value="1">Fender</option>
							<option value="2">Gibson</option>
							<option value="3">Yamaha</option>
							<option value="4">Roland</option>
							<option value="5">Korg</option>
							<option value="6">Taylor</option>
							<option value="7">Ibanez</option>
							<option value="8">Epiphone</option>
							<option value="9">Martin</option>
							<option value="10">PRS</option>
							<option value="11">Squier</option>
							<option value="12">Gretsch</option>
							<option value="13">Jackson</option>
							<option value="14">ESP</option>
							<option value="15">Rickenbacker</option>
							<option value="16">Seagull</option>
							<option value="17">Godin</option>
							<option value="18">Schecter</option>
							<option value="19">Dean</option>
							<option value="20">Cort</option>
							
						</select>
						
					</div>
					<div class="container-input">
						<label for="description" class="label-form">Descripción</label>
						<textarea name="description" id="description" class="in-descripcion" cols="30" rows="10" required ><%= product.description %></textarea>
					</div>
					<div class="container-input">
						<label for="category" class="label-form">Selecciona una categoria:</label>
						<select class="select-categoria" id="category" name="category" required >
							<option value="" disabled>--Elige--</option>
							<option value="instrument" <% if (product.category === 'instrument') { %> selected <% } %>>Instrumento</option>
							<option value="vinyl" <% if (product.category === 'vinyl') { %> selected <% } %>>Vinilo</option>
						</select>
					</div>
					<div class="container-input">
						<label for="precio" class="label-form">Precio</label>
						<input id="price" name="price" class="in-precio" type="number" class="form-input" value="<%= product.price %>" required />
					</div>
					<button type="submit" class="seguir btn-guardar">GUARDAR PRODUCTO</button>
					<br />
					
				</form>
				<form class="product-edit" action="/product/delete/<%= product.id %>?_method=DELETE" method="POST" enctype="multipart/form-data">
					<button type="submit" class="seguir btn-delete">ELIMINAR PRODUCTO</button>
				</form>
			</article>
		</main>
	</body>
  <%- include ("partials/Footer.ejs") %>
</html>
